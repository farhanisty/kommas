---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<article
	data-aos="fade-in"
	data-aos-delay="100" 
	data-aos-duration="1000" 
	class="max-w-[900px] mx-auto py-10">
	<h1 class="text-4xl font-bold uppercase text-custom-yellow bg-custom-darkblue inline-block py-1 px-4">{ title }</h1>
	<div class="pt-5 px-3 md:px-0">
		<slot />
	</div>
</article>
